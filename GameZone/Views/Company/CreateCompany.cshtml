@model GameZone.ViewModels.CompanyVM.CompanyViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="col-md-5 mx-auto mt-5">
        <form method="post" asp-controller="Company" asp-action="CreateCompany" enctype="multipart/form-data">
            <div class="form-group mb-2">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />

                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" type="text" rows="5"></textarea>

                <span asp-validation-for="Description"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="CompanyLogo">Company Logo:</label>
                <input asp-for="CompanyLogo" class="form-control" type="file" id="CompanyLogo" accept="image/*">
            </div>

            <div class="row justify-content-center mt-3">
                <button class="btn btn-success col-4" onclick="submit">Save</button>
            </div>
        </form>
    </div>
</div>