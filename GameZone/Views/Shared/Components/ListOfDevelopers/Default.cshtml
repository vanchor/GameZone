@model IEnumerable<GameZone.Domain.Core.Entities.Company>


<input class="form-control" type="text" id="searchName" onkeyup="findByNameInList('searchName', 'companyList')" placeholder="Search by name..." title="Type in a name">
<br />

<div class="list-group" id="companyList">
    @foreach (var company in Model)
    {
        var itemId = "ListItem" + @company.Id;
        <a id="@itemId" class="list-group-item list-group-item-action  p-2" onclick="clickItem(@company.Id, '@company.Name')">
            <img src="~/images/Media/Companies/@company.LogoUrl" alt="Logo" width="40px" class="rounded" />
            <span class="align-middle">@company.Name</span>
        </a>
    }
</div>
            